#include <stdio.h>
int main() {
    int n, temp, rem, sum=0, fact;
    printf("Enter number: ");
    scanf("%d",&n);
    temp=n;
    while(temp){
        rem=temp%10;
        fact=1;
        for(int i=1;i<=rem;i++) fact*=i;
        sum+=fact;
        temp/=10;
    }
    printf("Sum of factorials of digits: %d\n",sum);
    return 0;
}
